<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/background_height"
        android:src="@drawable/infinity_war_background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/background_img_description" />

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="@dimen/main_width"
        android:layout_height="@dimen/main_height"
        android:layout_below="@id/background_img"
        android:layout_margin="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:src="@drawable/infinity_war_image"
        android:contentDescription="@string/main_img_description" />
    <LinearLayout
        android:id="@+id/middle_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_height"
        android:layout_alignTop="@id/main_img"
        android:layout_toEndOf="@id/main_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avengers_name"
            android:textSize="@dimen/big_text_size"
            android:textColor="@color/movieTitleColor"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/released"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/small_margin"
                android:textStyle="bold"
                android:text="@string/released" />

            <TextView
                android:id="@+id/released_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avengers_iw_released_date" />
        </LinearLayout>

        <Button
            android:id="@+id/movie_trailer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular_margin"
            android:text="@string/trailer_btn_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/overview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/main_img"
        android:layout_below="@id/main_img"
        android:text="@string/overview_title"
        android:layout_marginBottom="@dimen/small_margin"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/main_img"
        android:layout_below="@id/overview_title"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/iw_overview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infinity_war_overview"/>
    </ScrollView>

</RelativeLayout>
